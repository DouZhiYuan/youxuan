/* 收货地址样式 */
.user_info_base{
  display: flex;
  border: 2rpx solid #f0f0f0;
}
.user_info_base view{
  padding: 10rpx;
}
.user_info{
  flex: 2;
}
.address_phone{
  flex: 1;
  text-align: right;
}

/* 购物车数据样式 */
.cart_item{
  display: flex;
  padding: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
  height: 200rpx;
}
.cart_img_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_img_wrap image{
  width: 80%;
}
.cart_info_wrap{
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666666;
}
.goods_price_wrap{
  display: flex;
  justify-content: space-between;
}
.goods_price{
  color: var(--themeColor);
  font-size: 35rpx;
}
.cart_num_tool{
  display: flex;
  padding-right: 20rpx;
}
.goods_num{
  width: 60rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 底部工具栏 */
.footer_tool{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  border-top: 2rpx solid #f0f0f0;
  padding-left: 20rpx;
}
.total_price_wrap{
  flex: 5;
  text-align: right;
  padding-right: 20rpx;
}

.total_price_text{
  color: var(--themeColor);
  font-size: 35rpx;
  font-weight: 800;
}
.total_price_wrap view:last-child{
  font-size: 20rpx;
}

.order_pay_wrap{
  height: 90rpx;
  flex: 2;
  background-color: var(--themeColor);
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}