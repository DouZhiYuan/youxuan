/* 按钮样式 */
.btn{
  padding: 20rpx;
}
.btn button{
  padding: 5rpx 0;
  margin: 0 auto;
  width: 56%;
  font-size: 28rpx;
}

/* 收货地址样式 */
.user_info_base{
  display: flex;
  border: 2rpx solid #f0f0f0;
}
.user_info_base view{
  padding: 10rpx;
}
.user_info{
  flex: 2;
}
.address_phone{
  flex: 1;
  text-align: right;
}

/* 购物车数据样式 */
.cart_null{
  text-align: center;
}
.cart_null image{
  width: 66%;
}
.cart_null navigator{
  display: inline-block;
  width: 35%;
  color: #ffffff;
  font-size: 33rpx;
  margin-top: 50rpx;
  background-color: var(--themeColor);
  padding: 20rpx;
  border-radius: 25rpx;
}
.cart_title{
  padding: 20rpx;
  font-size: 32rpx;
  color: var(--themeColor);
  border-bottom: 1rpx solid var(--themeColor);
  border-top: 1rpx solid var(--themeColor);
  display: flex;
  justify-content: space-between;
}
.cart_item{
  display: flex;
  padding: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
  height: 200rpx;
}
.cart_chk_wrap{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_img_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_img_wrap image{
  width: 80%;
}
.cart_info_wrap{
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666666;
}
.goods_price_wrap{
  display: flex;
  justify-content: space-between;
}
.goods_price{
  color: var(--themeColor);
  font-size: 35rpx;
}
.cart_num_tool{
  display: flex;
  padding-right: 20rpx;
}
.num_edit{
  width: 50rpx;
  height: 50rpx;
  display: flex;
  padding-top: 5rpx;
  justify-content: center;
  border: 2rpx solid #aaaaaa;
  border-radius: 10rpx;
}
.goods_num{
  width: 60rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 底部工具栏 */
.footer_tool{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  border-top: 2rpx solid #f0f0f0;
  padding-left: 20rpx;
}
.all_chk_wrap{
  flex: 2;
}

.total_price_wrap{
  flex: 5;
  text-align: right;
  padding-right: 20rpx;
}

.total_price_text{
  color: var(--themeColor);
  font-size: 35rpx;
  font-weight: 800;
}
.total_price_wrap view:last-child{
  font-size: 20rpx;
}

.order_pay_wrap{
  height: 90rpx;
  flex: 2;
  background-color: var(--themeColor);
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}