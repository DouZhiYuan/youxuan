page{
  background-color: #f0f0f0;
}
.user_info_wrap{
  position: relative;
  height: 45vh;
  background-color: var(--themeColor);
}
.user_img_wrap{
  position: relative;
}
.user_btn{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  color: #ffffff;
  border: 2rpx solid #ffffff;
  padding: 20rpx;
  border-radius: 10rpx;
}
.user_bg{
  height: 45vh;
  width: 100%;
  /* 迷糊 */
  filter: blur(10rpx);
}
.user_info{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 25%;
  text-align: center;
}
.user_icon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_name{
  color: #ffffff;
  margin-top: 40rpx;
  font-size: 40rpx;
}
.user_content{
  position: relative;
}
.user_main{
  color: #666666;
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -50rpx;
  padding-bottom: 100rpx;
}
.his_wrap{
  background-color: #ffffff;
  display: flex;
}
.his_wrap navigator{
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
}
.his_num{
  color: var(--themeColor);
}

/* 我的订单 */
.orders_wrap{
  background-color: #ffffff;
  margin-top: 30rpx; 
}
.order_title{
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.order_content{
  display: flex;
}
.order_content navigator{
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
}
.address_wrap{
  margin-top: 23rpx;
  padding: 30rpx 20rpx;
  background-color: #ffffff;
}
.app_info_wrap{
  margin-top: 25rpx;
  background-color: #ffffff;
}
.app_info_item{
  position: relative;
  padding: 30rpx 20rpx;
  border-bottom: 5rpx solid #f0f0f0;
}
.app_contact{
  display: flex;
  justify-content: space-between;
}
.recommend{
  margin-top: 25rpx;
  padding: 30rpx 20rpx;
  background-color: #ffffff;
}
.app_info_item button{
  position: absolute;
  opacity: 0;
  width: 100%;
  height: 100rpx;
  top: 0;
  left: 0;
}