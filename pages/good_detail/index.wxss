/* 轮播图 */
.detail_swiper swiper{
  height: 65vw;
  text-align: center;
}
.detail_swiper swiper image{
  width: 60%;
}

/* 价格 */
.goods_price{
  color: var(--themeColor);
  padding: 10rpx 10rpx 10rpx 25rpx;
  font-weight: 800;
  font-size: 35rpx;
}
.goods_name_collect{
  display: flex;
  padding-bottom: 20rpx;
  border-bottom: 12rpx solid #f0f0f0;
}
.goods_name_collect .goods_name{
  flex: 4;
  color: #363636;
  font-size: 28rpx;
  padding: 0 10rpx;
  letter-spacing: 1rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_collect{
  border-left: 5rpx solid #aaaaaa;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  color: #363636;
}
.iconfont{
  color: #dedede;
}

.goods_info_title{
  height: 90rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 8rpx solid #f0f0f0;
}
.goods_info_title text{
  padding-left: 25rpx;
  font-size: 30rpx;
  color: var(--themeColor);
  font-weight: 800;
}
.goods_info_content {
  padding: 0 15rpx 85rpx 15rpx;
}

/* 立即购买的实现 */
.time-buy{
  width: 100vw;
  height: 40vh;
  background-color: #ffffff;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
.del-buy{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  border: 2rpx solid var(--themeColor);
  padding: 0 15rpx;
  font-size: 50rpx;
  border-radius: 50%;
}
.good-info{
  padding: 20rpx;
  display: flex;
}
.good-left{
  flex: 1;
}
.good-left image{
  width: 100%;
  height: 100%;
}
.good-right{
  flex: 2;
}
.good-right view{
  padding: 10rpx 30rpx;
}
.good-price{
  color: var(--themeColor);
  font-size: 35rpx;
}
.good-num{
  color: #aaaaaa;
}
.good-only{
  color: #666666;
}
.time-buy button{
  width: 80vw;
  margin: 50rpx auto 0;
}